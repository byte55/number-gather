# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for text files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Diff settings
*.html diff=html
*.css diff=css
*.js diff=javascript

# GitHub Linguist overrides
*.html linguist-detectable=true
*.css linguist-detectable=true
*.js linguist-detectable=true
CLAUDE.md linguist-documentation=true

# Export ignore (files to exclude from release archives)
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
CLAUDE.md export-ignore